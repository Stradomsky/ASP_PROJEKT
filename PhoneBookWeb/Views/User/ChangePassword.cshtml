@{
    ViewData["Title"] = "Change Password";
    Layout = "Logged";
}
@model ChangePassword

<form method="post">

  <div class="form-outline mb-4">
      <label class="form-label">Old password</label>
    <input type="text" class="form-control" asp-for="OldPassword"/>
    <span asp-validation-for="OldPassword" class="text-danger"></span>
  </div>

  <div class="form-outline mb-4">
    <label class="form-label">New password</label>
    <input type="text" class="form-control" asp-for="NewPassword"/>
    <span asp-validation-for="NewPassword" class="text-danger"></span>
  </div>

  <div class="form-outline mb-4">
    <label class="form-label">Repeat new password</label>
    <input type="text" class="form-control" asp-for="RepeatedNewPassword"/>
    <span asp-validation-for="RepeatedNewPassword" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary btn-block mb-4">Change password</button>
  
  @if(ViewBag.Error != null)
  {
      <p>@ViewBag.Error</p>
  }

</form>